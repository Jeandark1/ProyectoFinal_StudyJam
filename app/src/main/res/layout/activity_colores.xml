<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo3"
    tools:context="com.gdandroidbolivia.babymater11.ColoresActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/color"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/fondo3"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/ba1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/rojo"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:onClick="rojo"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/ba2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/amarillo"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="10dp"
                android:onClick="amarillo"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/ba3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="celeste"
                android:background="@drawable/azul"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            >
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ba4"
                android:background="@drawable/naranja"
                android:layout_height="100dp"
                android:onClick="naranja"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ba5"
                android:onClick="verde"
                android:background="@drawable/verde"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ba6"
                android:onClick="cafe"
                android:background="@drawable/cafe"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/fondo3">

            <ImageView
                android:id="@+id/idImagen1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/naranja"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/idImagen2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/azul"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/idImagen3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cuadro"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/fondo3"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_centerInParent="true"
            android:id="@+id/ant"
            android:background="@drawable/volvere"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
