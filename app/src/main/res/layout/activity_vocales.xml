<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/fondo5"
    android:layout_height="match_parent"
    tools:context="com.gdandroidbolivia.babymater11.VocalesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/vocal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/fondo5"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/ba1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/aa"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:onClick="a"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/ba2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ee"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:onClick="e"/>

            <ImageButton
                android:onClick="i"
                android:id="@+id/ba3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/ii"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            >
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ba4"
                android:onClick="o"
                android:background="@drawable/oo"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ba6"
                android:onClick="u"
                android:background="@drawable/uu"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:background="@drawable/fondo5"

            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/mal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="140dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bien" />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/fondo5"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_centerInParent="true"
            android:id="@+id/ant"
            android:background="@drawable/volvere"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
